    <style name="Title.Text.Popup" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/Title.Text</item>
    </style>

    <style name="Title.Text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnimatedBottomBarText">
        <item name="android:textStyle">bold</item>
