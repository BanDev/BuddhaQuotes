<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="Appearance">

        <ListPreference
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:icon="@drawable/ic_baseline_palette_24"
            app:key="theme"
            app:title="App Theme"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/size_entries"
            app:entryValues="@array/size_values"
            app:icon="@drawable/ic_baseline_text_fields_24"
            app:key="size"
            app:title="Text Size"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Information" >
        <Preference
            android:key="about"
            android:title="About"
            app:icon="@drawable/ic_baseline_info_24">

        </Preference>
        <Preference
            android:key="license"
            android:title="App Licence"
            android:summary="GPLv3"
            app:icon="@drawable/ic_baseline_gavel_24">

        </Preference>
        <Preference
            android:key="oss_libraries"
            android:title="Open Source Libraries"
            app:icon="@drawable/ic_baseline_library_books_24">

        </Preference>
    </PreferenceCategory>



</PreferenceScreen>