<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="@string/appearance">

        <ListPreference
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:icon="@drawable/ic_baseline_palette_24"
            app:key="theme"
            app:title="@string/app_theme"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/size_entries"
            app:entryValues="@array/size_values"
            app:icon="@drawable/ic_baseline_text_fields_24"
            app:key="size"
            app:title="@string/text_size"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/information" >
        <Preference
            android:key="About"
            android:title="@string/about"
            app:icon="@drawable/ic_baseline_info_24">

        </Preference>
        <Preference
            android:key="help"
            android:title="@string/help"
            app:icon="@drawable/ic_help_circle_24">

        </Preference>
        <Preference
            android:key="license"
            android:title="@string/app_license"
            android:summary="@string/gplv3"
            app:icon="@drawable/ic_baseline_gavel_24">

        </Preference>
        <Preference
            android:key="oss_libraries"
            android:title="@string/open_source_libraries"
            app:icon="@drawable/ic_baseline_library_books_24">

        </Preference>
    </PreferenceCategory>



</PreferenceScreen>