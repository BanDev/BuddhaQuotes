<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bandev.buddhaquotes">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/ic_buddha"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_buddha"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <activity android:name=".WidgetConfigureActivity">
            <intent-filter>
                <action android:name="org.bandev.buddhaquotes.WIDGET_BUTTON" />
                <action android:name="org.bandev.buddhaquotes.WIDGET_LIKE" />
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/ScrollingActivity" />
        <activity
            android:name=".AddList"
            android:label="addList"
            android:theme="@style/ScrollingActivity" />
        <activity
            android:name=".CreateNewList"
            android:label="createNewList"
            android:theme="@style/ScrollingActivity" />
        <activity android:name=".FullLicense" />
        <activity
            android:name=".slides.S1Intro"
            android:theme="@style/slide1" />
        <activity
            android:name=".slides.S2Promise"
            android:theme="@style/slide2" />
        <activity
            android:name=".slides.S3Favourite"
            android:theme="@style/slide3" />
        <activity
            android:name=".slides.S4Refresh"
            android:theme="@style/slide4" />
        <activity
            android:name=".slides.S5Brightness"
            android:theme="@style/slide5" />
        <activity
            android:name=".slides.S6TextSize"
            android:theme="@style/slide6" />
        <activity
            android:name=".slides.S7End"
            android:theme="@style/slide7" />
        <activity
            android:name=".License"
            android:label="License"
            android:theme="@style/license" />
        <activity android:name=".InfoPanel" />
        <activity android:name=".Favourites" />
        <activity
            android:name=".Splash"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="@string/about"
            android:theme="@style/about" />
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/settings" />
        <activity
            android:name=".MainActivity"
            android:label="@string/MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>